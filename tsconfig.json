{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "preserveConstEnums": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "sourceRoot": "static/src",
    "rootDir": "static/src",
    "outDir": "static/build"
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}